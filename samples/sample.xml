<?xml version="1.0" encoding="UTF-8"?>
<root>
    <background>
        <action text="view environments" type="open" file="cmd.exe" parameter="/k set" icon="exeIcon:cmd.exe"/>
        <action text="open cmd here" type="open" file="cmd.exe" parameter="/k cd /d ${CTXMENU_PWD}" icon="exeIcon:cmd.exe"/>
        <action text="open cmd(admin) here" type="runas" file="cmd.exe" parameter="/k cd /d ${CTXMENU_PWD}" icon="exeIcon:cmd.exe"/>
        <separator/>
        <menu text="websites">
            <action text="google" type="open" file="https://www.google.com" icon="exeIcon:C:\Program Files\Google\Chrome\Application\chrome.exe"/>
            <action text="github" type="open" file="https://github.com/" icon="exeIcon:C:\Program Files (x86)\Microsoft\Edge\Application\msedge.exe"/>
        </menu>
        <separator/>
        <menu text="directories">
            <action text="LOCALAPPDATA" type="open" file="%LOCALAPPDATA%" icon="exeIcon:C:\Windows\explorer.exe"/>
            <action text="APPDATA" type="open" file="%APPDATA%" icon="exeIcon:C:\Windows\explorer.exe"/>
        </menu>
    </background>
</root>